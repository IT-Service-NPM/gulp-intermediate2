{
	"name": "gulp-intermediate2",
	"type": "module",
	"version": "1.0.1",
	"description": "A gulp helper for tools that need files on disk.",
	"keywords": [
		"gulpplugin",
		"gulp",
		"intermediate",
		"filesystem"
	],
	"author": {
		"name": "Sergei S. Betke",
		"email": "Sergey.S.Betke@yandex.ru",
		"url": "https://github.com/sergey-s-betke"
	},
	"homepage": "https://github.com/IT-Service-NPM/gulp-intermediate2",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/IT-Service-NPM/gulp-intermediate2.git"
	},
	"bugs": {
		"url": "https://github.com/IT-Service-NPM/gulp-intermediate2/issues"
	},
	"license": "MIT",
	"engines": {
		"node": ">=20.0"
	},
	"main": "dist/index.js",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./dist/index.js",
			"default": "./dist/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"CI": "npm run build && npm run lint && npm run check-exports && npm run test && npm run update-readme",
		"check-exports": "attw --pack .",
		"lint": "tsc && eslint",
		"test": "vitest run --coverage",
		"update-readme-API": "tsdoc --src=src/lib/intermediate2/* --types --repo=https://github.com/IT-Service-NPM/gulp-intermediate2",
		"update-readme-examples": "md-code ./readme.md",
		"update-readme": "npm run update-readme-examples",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
	},
	"dependencies": {
		"gulplog": "^2.2.0",
		"nanoid": "^5.0.8",
		"plugin-error": "^2.0.1",
		"stream": "^0.0.3",
		"vinyl": "^3.0.0",
		"vinyl-fs": "^4.0.0"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.16.4",
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-angular": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@commitlint/types": "^19.5.0",
		"@eslint/eslintrc": "^3.1.0",
		"@eslint/js": "^9.13.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^11.0.0",
		"@semantic-release/npm": "^12.0.1",
		"@semantic-release/release-notes-generator": "^14.0.1",
		"@types/gulp": "^4.0.17",
		"@types/vinyl-fs": "^3.0.5",
		"@typescript-eslint/eslint-plugin": "^8.12.2",
		"@typescript-eslint/parser": "^8.12.2",
		"@vitest/coverage-istanbul": "^2.1.4",
		"conventional-changelog-cli": "^5.0.0",
		"eslint": "^9.14.0",
		"eslint-plugin-tsdoc": "^0.3.0",
		"gulp": "^5.0.0",
		"gulp-cli": "^3.0.0",
		"gulp-intermediate2": "file:",
		"markdown-code-example-inserter": "^3.0.0",
		"semantic-release": "^24.2.0",
		"ts-node": "^10.9.2",
		"tsdoc-markdown": "^0.6.3",
		"tsup": "^8.3.5",
		"tsx": "^4.19.2",
		"typescript": "^5.6.3",
		"vitest": "^2.1.1"
	}
}
